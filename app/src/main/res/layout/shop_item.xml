<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_image">
        </ImageView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/item_name"
            app:layout_constraintLeft_toRightOf="@id/item_image">
        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:id="@+id/price"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            app:layout_constraintLeft_toRightOf="@id/item_image">
        </TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/price_number"
            app:layout_constraintLeft_toRightOf="@id/price"
            app:layout_constraintTop_toBottomOf="@id/item_name">
        </TextView>
        <Button
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:text="-"
            android:textColor="@color/txt_white"
            android:background="@drawable/minus_plus"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintRight_toLeftOf="@id/item_kg"
            app:layout_constraintLeft_toRightOf="@id/item_image">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:id="@+id/item_kg"
            app:layout_constraintTop_toBottomOf="@id/price_number"
            app:layout_constraintLeft_toRightOf="@id/minus"
            app:layout_constraintRight_toLeftOf="@id/plus">
        </TextView>
        <Button
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:text="+"
            android:textColor="@color/txt_white"
            android:background="@drawable/minus_plus"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintLeft_toRightOf="@id/item_kg">
        </Button>
        <Button
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/discount"
            android:text="@string/discount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>